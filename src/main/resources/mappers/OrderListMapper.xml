<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nwafu.bingo.dao.OrderlistDao">

    <resultMap id="BaseOrderListMap" type="com.nwafu.bingo.entity.Orderlist">
        <id column="oid" property="oid" jdbcType="INTEGER"/>
        <result column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="detail" property="orderDetails" jdbcType="VARCHAR"/>
        <result column="otime" property="otime" jdbcType="DATE"/>

    </resultMap>

    <insert id="add" parameterType="com.nwafu.bingo.entity.OrderDetail" useGeneratedKeys="true">
        INSERT INTO
            orderlist(uid,detail,otime)
        VALUES
            (#{uid},#{orderDetails},#{otime})
    </insert>

    <delete id="delete" parameterType="com.nwafu.bingo.entity.Orderlist">
        DELETE FROM
            orderlist
        WHERE
            oid = #{oid}
    </delete>

    <select id="getById"  resultMap="BaseOrderListMap">
        SELECT
            *
        FROM
            orderlist
        WHERE ${idType} = #{idValue}
    </select>
    <select id="getAll" resultMap="BaseOrderListMap">
        SELECT
            *
        FROM
            orderlist
    </select>
</mapper>